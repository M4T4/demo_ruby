<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Catalogo de pollo</h1>
<ul class="catalogs">
  <% cache @products do %> <!-- Definimos los productos que no se deban redenrizar -->
    <% @products.each do |product| %>
    <% cache product do %> <!-- De forma especifica-->
      <li>
      <!--Talves para alterar la imagen la deba de modificar aqui -->
        <%= image_tag(product.image_url) %>
        <h2><%= product.title %></h2>
        <p>
          <%= sanitize(product.description) %>
        </p>
  <div class="price">
          <%= number_to_currency(product.price) %>
        </div>
      </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
