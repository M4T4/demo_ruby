<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Catalogo de pollo</h1>
<ul class="catalogs">
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url) %>
      <h2><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
 <div class="price">
        <%= number_to_currency(product.price) %>
      </div>
    </li>
  <% end %>
</ul>
